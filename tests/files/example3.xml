<?xml version="1.0" encoding="utf-8"?>
<root>
    <widget>
        <debug type="string">on</debug>
        <window>
            <title type="string">Sample Konfabulator Widget</title>
            <name type="string">main_window</name>
            <width type="int">500</width>
            <height type="int">500</height>
        </window>
        <image>
            <src type="string">Images/Sun.png</src>
            <name type="string">sun1</name>
            <hOffset type="int">250</hOffset>
            <vOffset type="int">250</vOffset>
            <alignment type="string">center</alignment>
        </image>
        <text>
            <data type="string">Click Here</data>
            <size type="int">36</size>
            <style type="string">bold</style>
            <name type="string">text1</name>
            <hOffset type="int">250</hOffset>
            <vOffset type="int">100</vOffset>
            <alignment type="string">center</alignment>
            <onMouseUp type="string">sun1.opacity = (sun1.opacity / 100) * 90;</onMouseUp>
        </text>
    </widget>
</root>
